@page 
@model ChatRPCI.AddMuteModel
@{
    ViewData["Title"] = "Add user in black list";
}
<div class=" container-fluid">
    <div class="row">
        <div class="col-xs-12  col-sm-8 col-md-6 " asp-validation-summary="All"></div>
    </div>
    <form method="POST">
        <div class="row">
            <div class="form-group col-xs-12  col-sm-8 col-md-6 ">
                <label for="name_input">Enter username</label>
                <input asp-for="Input.Email" class="form-control" id="name_input" placeholder="Enter email">
            </div>
        </div>
        <div class="row">
            <div class="btns_set">
                <button id="submit_but1" type="submit" class="btn btn-primary btn_set" data-toggle="tooltip" data-placement="top" title="@Model.FAQ">Mute</button>
                <button id="chs" type="button" class="btn btn-secondary btn_set" data-toggle="modal" data-target="#muteds">
                    Muteds
                </button>
                <a class="btn btn-secondary btn_set" asp-area="" asp-page="/Dialogs">Back</a>
            </div>
        </div>
    </form>
</div>




<div class="modal fade" id="muteds" tabindex="-1" role="dialog" aria-labelledby="mutedsTitle" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="mutedsTitle">ЧС</h5>
                <button type="button" class="close close_fr" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="frnds" class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Last Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                       
                            @foreach (CHsModel s in Model.muteds)
                            {
                                <tr>
                                    <td>@s.MutedUserName</td>
                                    <td>
                                        <form method="post">
                                            <div class="form-group">
                                                <button type="submit" asp-page-handler="delete" asp-route-id="@s.id">
                                                    Удалить
                                                </button>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                                
                            }
                </table>
            </div>
            <div id="foot" class="modal-footer">
                <button id="closeF" type="button" class="btn btn-secondary close_fr" data-dismiss="modal">Close</button>


            </div>
        </div>
    </div>
</div>




    @section Scripts {

        <script>

            window.onload = function () {
                $('#name_input').val('');
            }
            $('#name_input').on("dblclick", function () {
                $('#name_input').val('');
            });

        </script>
    }
